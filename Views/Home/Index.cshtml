@{
    ViewData["Title"] = "Home";
}
@model List<Boat>

<h1>Prochaine fermeture</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nom du bateau</th>
            <th>Type Fermeture</th>
            <th>Date Fermeture</th>
            <th>Date Reouverture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var boat in Model)
        {
            <tr>
                <td>@boat._BoatName</td>
                <td>@boat._ClosingType</td>
                <td>@boat._ClosingDate</td>
                <td>@boat._ReopeningDate</td>
            </tr>
        }
    </tbody>
</table>